@model IEnumerable<HEMS.Models.Student>

<div class="container py-4">
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body bg-light d-flex justify-content-between align-items-center rounded">
            <div>
                <h3 class="mb-0 fw-bold text-primary"><i class="bi bi-people-fill me-2"></i>Student Management</h3>
                <p class="text-muted small mb-0">Upload CSV to generate student accounts automatically.</p>
            </div>

            <form asp-action="BulkUpload" method="post" enctype="multipart/form-data" class="d-flex gap-2">
                <input type="file" name="studentFile" class="form-control" accept=".csv" required />
                <button type="submit" class="btn btn-success px-4">
                    <i class="bi bi-file-earmark-arrow-up"></i> Import
                </button>
            </form>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">@TempData["Error"]</div>
    }

    <div class="table-responsive bg-white text-black p-3 rounded shadow-sm">
        <table class="table table-hover align-middle">
            <thead style="background-color:#000;color:#fff;">
                <tr>
                    <th>FullName</th>
                    <th>ID Number</th>
                    <th>Username (Login)</th>
                    <th>Department</th>
                    <th>Year</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold">@item.FullName</td>
                        <td>@item.IdNumber</td>
                        <td><span>@item.User?.UserName</span></td>
                        <td>@item.Department</td>
                        <td>@item.AcademicYear</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.StudentId" class="btn btn-sm btn-secondary">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="mt-3">
            <a asp-action="Create" class="btn btn-success">Add Student</a>
        </div>
    </div>
</div>