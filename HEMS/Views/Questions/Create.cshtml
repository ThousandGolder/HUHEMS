@model HEMS.Models.Question

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-patch-plus me-2"></i>Add Question to Exam</h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="ExamId" value="@ViewBag.ExamId" />

                        <div class="mb-3">
                            <label asp-for="QuestionText" class="form-label fw-bold">Question Text</label>
                            <textarea asp-for="QuestionText" class="form-control" rows="4" placeholder="Type your question here..." required></textarea>
                            <span asp-validation-for="QuestionText" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold"><i class="bi bi-image"></i> Question Image (Optional)</label>
                            <input type="file" name="imageFile" class="form-control" accept="image/*" />
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-controller="Exams" asp-action="Details" asp-route-id="@ViewBag.ExamId" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary px-4">Save & Add Choices</button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card shadow-sm border-0 border-start border-4 border-success bg-light">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-file-earmark-zip-fill text-success fs-2 me-3"></i>
                        <div>
                            <h5 class="mb-0 fw-bold">Bulk Upload Questions</h5>
                            <p class="text-muted small mb-0">Import many questions at once using a ZIP package.</p>
                        </div>
                    </div>

                    <form asp-controller="Exams" asp-action="BulkUpload" asp-route-id="@ViewBag.ExamId" method="post" enctype="multipart/form-data">
                        <div class="input-group">
                            <input type="file" name="examZip" class="form-control" accept=".zip" required />
                            <button type="submit" class="btn btn-primary px-4 fw-bold">Upload ZIP</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>