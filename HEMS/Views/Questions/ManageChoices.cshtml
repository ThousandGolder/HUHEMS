@model HEMS.Models.Question

@{
    ViewData["Title"] = "Manage Choices";
    int currentCount = Model.Choices?.Count ?? 0;
    char nextLetter = (char)('A' + currentCount);
    if (nextLetter > 'Z') nextLetter = 'Z';

    string placeholderText = $"e.g. Option {nextLetter}";
    bool hasCorrectAnswer = Model.Choices?.Any(c => c.IsAnswer) ?? false;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-sm mb-4 border-0">
                <div class="card-body bg-light rounded">
                    <nav aria-label="breadcrumb">

                    <div class="d-flex justify-content-between align-items-start mb-2">
                        <a asp-controller="Exams" asp-action="Details" asp-route-id="@Model.ExamId" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-arrow-left me-1"></i> Back
                        </a>
                        <h2 style="color: #228B22;" class="mb-0 fs-5 custom-brand-color">Manage Choices For a Question of:</h2>
                    </div>
                        
                    </nav>
                    <h3 class="fw-bold fs-5">@Model.QuestionText</h3>
                    <span class="badge bg-info text-dark">Weight: @Model.MarkWeight.ToString("0.##") Marks</span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-5">
                    <div class="card shadow-sm border-primary">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0"><i class="bi bi-plus-circle"></i> Add New Choice</h5>
                        </div>
                        <div class="card-body">
                            <form asp-action="AddChoice" method="post">
                                <input type="hidden" name="questionId" value="@Model.QuestionId" />
                                <div class="mb-3">
                                    <label class="form-label fw-bold">Choice Text</label>
                                    <input name="choiceText" class="form-control form-control-lg" placeholder="@placeholderText" required autofocus />
                                </div>

                                <div class="mb-3 form-check form-switch">
                                    <input class="form-check-input" type="checkbox" name="isAnswer" value="true"
                                           id="isCorrectSwitch" @(hasCorrectAnswer ? "disabled" : "")>
                                    <label class="form-check-label fw-bold @(hasCorrectAnswer ? "text-muted" : "")" for="isCorrectSwitch">
                                        Mark as Correct Answer
                                    </label>
                                    @if (hasCorrectAnswer)
                                    {
                                        <div class="form-text text-danger small">
                                            <i class="bi bi-exclamation-triangle"></i> One correct answer already exists.
                                        </div>
                                    }
                                </div>

                                <button type="submit" class="btn btn-primary w-100 py-2">Add Option @nextLetter</button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="col-md-7">
                    <div class="card shadow-sm">
                        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Current Options</h5>
                            <span class="badge bg-secondary">@currentCount Total</span>
                        </div>
                        <div class="card-body p-0">
                            <ul class="list-group list-group-flush">
                                @if (Model.Choices == null || !Model.Choices.Any())
                                {
                                    <li class="list-group-item text-center py-5 text-muted">No choices added yet.</li>
                                }
                                else
                                {
                                    foreach (var choice in Model.Choices)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                                            <div class="d-flex align-items-center">
                                                <i class="bi @(choice.IsAnswer ? "bi-check-circle-fill text-success" : "bi-circle text-muted") me-3"></i>
                                                <span class="@(choice.IsAnswer ? "fw-bold text-success" : "")">@choice.ChoiceText</span>
                                            </div>

                                            <div class="d-flex align-items-center">
                                                <form asp-action="DeleteChoice" method="post" id="deleteForm_@choice.ChoiceId">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="choiceId" value="@choice.ChoiceId" />

                                                    <button type="button"
                                                            class="btn btn-sm btn-outline-danger border-0"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#reusableConfirmModal"
                                                            data-title="Delete Choice?"
                                                            data-message="Are you sure you want to remove '@choice.ChoiceText'? This action cannot be undone."
                                                            data-target="deleteForm_@choice.ChoiceId"
                                                            data-type="form">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_ConfirmationModal" />

@section Scripts {
    <script src="~/js/ui-interactions.js" asp-append-version="true"></script>
}