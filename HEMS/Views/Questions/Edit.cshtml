@model HEMS.Models.Question
@{
    ViewData["Title"] = "Edit Question";
}
<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Question Text</h4>
                    <a asp-action="ManageChoices" asp-route-questionId="@Model.QuestionId" class="btn btn-sm btn-dark">
                        <i class="bi bi-list-check"></i> Manage Choices
                    </a>
                </div>
                <div class="card-body">
                    @* UPDATED: Added enctype for file uploads *@
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="QuestionId" />
                        <input type="hidden" asp-for="ExamId" />
                        <input type="hidden" asp-for="MarkWeight" />

                        <div class="mb-3">
                            <label asp-for="QuestionText" class="form-label fw-bold">Question Text</label>
                            <textarea asp-for="QuestionText" class="form-control" rows="4" required></textarea>
                            <span asp-validation-for="QuestionText" class="text-danger"></span>
                        </div>

                        @* ADDED: Manual Image Replacement *@
                        <div class="mb-4 p-3 bg-light border rounded">
                            <label class="form-label fw-bold"><i class="bi bi-image"></i> Question Image / Code Snippet</label>
                            @if (!string.IsNullOrEmpty(Model.ImagePath))
                            {
                                <div class="mb-2">
                                    <img src="@Model.ImagePath" width="150" class="img-thumbnail d-block mb-1" />
                                    <span class="text-muted small">Current file linked</span>
                                </div>
                            }
                            <input type="file" name="newImage" class="form-control" accept="image/*" />
                            <small class="text-muted">Upload a new image to replace current or add a new one.</small>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-controller="Exams" asp-action="Details" asp-route-id="@Model.ExamId" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0 text-muted">Quick Choice Review</h5>
                </div>
                <ul class="list-group list-group-flush">
                    @if (Model.Choices == null || !Model.Choices.Any())
                    {
                        <li class="list-group-item text-center py-3 text-muted">No choices found for this question.</li>
                    }
                    else
                    {
                        foreach (var choice in Model.Choices)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <span>
                                    <i class="bi @(choice.IsAnswer ? "bi-check-circle-fill text-success" : "bi-circle text-muted")"></i>
                                    <span class="ms-2">@choice.ChoiceText</span>
                                </span>
                                <form asp-action="DeleteChoice" method="post" onsubmit="return confirm('Are you sure?');">
                                    <input type="hidden" name="choiceId" value="@choice.ChoiceId" />
                                    <input type="hidden" name="returnUrl" value="Edit" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger border-0">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">