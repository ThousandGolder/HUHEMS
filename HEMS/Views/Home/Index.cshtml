@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HEMS - Holistic Exam Management System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="landing-body">
    @* Applied the fix class here *@

    <nav class="navbar navbar-expand-lg navbar-dark bg-transparent position-absolute w-100">
        <div class="container">
            <a class="navbar-brand fw-bold fs-3" href="#"><i class="bi bi-mortarboard-fill"></i> HEMS</a>
            <div class="ms-auto">
                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light me-2 rounded-pill px-4">Login</a>
            
            </div>
        </div>
    </nav>

    <header class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <h1 class="display-3 fw-bold mb-4">Master Your Exams with <span style="color: #3498db;">HEMS</span></h1>
                    <p class="lead mb-5 opacity-75">A holistic approach to online assessments. Secure, intuitive, and designed for both educators and students to achieve excellence.</p>
                    <div class="d-flex gap-3">
                        <a href="#features" class="btn btn-outline-light btn-lg px-5 py-3 rounded-pill">Learn More</a>
                    </div>
                </div>
                <div class="col-lg-6 d-none d-lg-block text-center">
                    <img src="https://cdni.iconscout.com/illustration/premium/thumb/online-exam-4271010-3545415.png" class="img-fluid" alt="Exam Illustration">
                </div>
            </div>
        </div>
    </header>

    <section id="features" class="py-5 bg-light">
        <div class="container py-5">
            <div class="text-center mb-5">
                <h2 class="fw-bold">Why Choose HEMS?</h2>
                <p class="text-muted">Built for the modern academic environment.</p>
            </div>
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card feature-card h-100 p-4 text-center">
                        <div class="icon-circle mx-auto"><i class="bi bi-shield-check"></i></div>
                        <h4>Secure Platform</h4>
                        <p class="text-muted">Encrypted data and secure login ensure exam integrity at all levels.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card feature-card h-100 p-4 text-center">
                        <div class="icon-circle mx-auto"><i class="bi bi-lightning-charge"></i></div>
                        <h4>Real-time Grading</h4>
                        <p class="text-muted">Instant results for students and detailed analytics for coordinators.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card feature-card h-100 p-4 text-center">
                        <div class="icon-circle mx-auto"><i class="bi bi-clock-history"></i></div>
                        <h4>Timed Sessions</h4>
                        <p class="text-muted">Precise exam timers to manage session duration automatically.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="py-4 bg-dark text-white-50 text-center">
        <div class="container">
            <small>&copy; 2026 Holistic Exam Management System. All Rights Reserved.</small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>