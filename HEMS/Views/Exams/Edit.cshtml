@model HEMS.Models.Exam

@{
    ViewData["Title"] = "Edit Exam";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h2 class="mb-0 h4"><i class="bi bi-pencil-square me-2"></i>Edit Exam Context</h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="ExamId" />

                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="ExamTitle" class="form-label fw-bold">Exam Title</label>
                            <input asp-for="ExamTitle" class="form-control form-control-lg" />
                            <span asp-validation-for="ExamTitle" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="AcademicYear" class="form-label fw-bold">Academic Year</label>
                                <select asp-for="AcademicYear" class="form-select">
                                    @* Ensures the list includes the currently saved year plus a range *@
                                    @for (int y = 2018; y <= DateTime.Now.Year + 3; y++)
                                    {
                                        <option value="@y">@y</option>
                                    }
                                </select>
                                <span asp-validation-for="AcademicYear" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="DurationMinutes" class="form-label fw-bold">Duration (Mins)</label>
                                <div class="input-group">
                                    <input asp-for="DurationMinutes" class="form-control" type="number" min="1" />
                                    <span class="input-group-text"><i class="bi bi-clock"></i></span>
                                </div>
                                <span asp-validation-for="DurationMinutes" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="DefaultMark" class="form-label fw-bold">Marks Per Q</label>
                                <input asp-for="DefaultMark" class="form-control" type="number" step="0.1" min="0.1" />
                                <span asp-validation-for="DefaultMark" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold">Description / Instructions</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ExamStatus" class="form-label fw-bold">Exam Status</label>
                            <select asp-for="ExamStatus" class="form-select @(Model.ExamStatus == "Published" ? "border-success" : "bg-light")">
                                <option value="Draft">Draft (Hidden from Students)</option>
                                <option value="Published">Published (Live for Students)</option>
                            </select>
                            <span asp-validation-for="ExamStatus" class="text-danger small"></span>
                        </div>

                        <hr />
                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Index" class="btn btn-link text-secondary text-decoration-none">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary px-5 py-2 shadow-sm fw-bold">
                                <i class="bi bi-save"></i> Update Exam
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            @if (Model.ExamStatus == "Draft")
            {
                <div class="alert alert-info mt-3 small">
                    <i class="bi bi-info-circle-fill"></i> This exam is currently a <strong>Draft</strong>. Students cannot see or take this exam until you change the status to <strong>Published</strong>.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}