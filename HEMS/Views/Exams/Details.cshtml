@model HEMS.Models.Exam
<div class="col-md-8">
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Questions (@(Model.Questions?.Count ?? 0))</h5>
            <a asp-controller="Questions" asp-action="Create" asp-route-examId="@Model.ExamId" class="btn btn-sm btn-outline-light">
                <i class="bi bi-plus-circle"></i> Add Question
            </a>
        </div>
        <div class="card-body">
            @if (Model.Questions == null || !Model.Questions.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-clipboard-x text-muted display-4"></i>
                    <p class="mt-2 text-muted">No questions added yet.</p>
                </div>
            }
            else
            {
                int qCount = 1;
                foreach (var q in Model.Questions)
                {
                    <div class="border-bottom mb-4 pb-3">
                        <div class="d-flex justify-content-between align-items-start">
                            <h6 class="pe-3"><strong>Q@(qCount++):</strong> @q.QuestionText</h6>
                            <div class="d-flex">
                                <a asp-controller="Questions" asp-action="Edit" asp-route-id="@q.QuestionId" class="btn btn-sm btn-outline-primary border-0 me-1">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <button type="button"
                                        class="btn btn-sm btn-outline-danger border-0 js-delete-question-btn"
                                        data-id="@q.QuestionId"
                                        data-text="@q.QuestionText">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>

                        @* ADDED: Image Preview in Details *@
                        @if (!string.IsNullOrEmpty(q.ImagePath))
                        {
                            <div class="mb-2">
                                <img src="@q.ImagePath" class="img-thumbnail" style="max-height:100px;" />
                            </div>
                        }

                        <ul class="list-group list-group-flush mt-2">
                            @foreach (var choice in q.Choices ?? new List<Choice>())
                            {
                                <li class="list-group-item d-flex align-items-center py-1 border-0 bg-transparent small">
                                    <i class="bi @(choice.IsAnswer ? "bi-check-circle-fill text-success" : "bi-circle text-muted") me-2"></i>
                                    <span class="@(choice.IsAnswer ? "text-success fw-bold" : "")">@choice.ChoiceText</span>
                                </li>
                            }
                        </ul>
                    </div>
                }
            }
        </div>
    </div>

    @* ADDED: Bulk Upload Section *@
    <div class="card shadow-sm border-0 border-start border-4 border-success">
        <div class="card-header bg-light">
            <h6 class="mb-0 text-success fw-bold"><i class="bi bi-file-earmark-zip-fill"></i> Bulk Upload Questions</h6>
        </div>
        <div class="card-body">
            <form asp-controller="Exams" asp-action="BulkUpload" asp-route-id="@Model.ExamId" method="post" enctype="multipart/form-data">
                <div class="input-group">
                    <input type="file" name="examZip" class="form-control" accept=".zip" required />
                    <button type="submit" class="btn btn-primary px-4">Upload ZIP</button>
                </div>
                <small class="text-muted">Package must contain manifest.csv and images/ folder.</small>
            </form>
            <div class="mt-3">
                <a class="btn btn-outline-primary" href="~/templates/question-upload-template.csv" download>
                    <i class="bi bi-download me-1"></i> Download question CSV template
                </a>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="bi bi-exclamation-triangle-fill me-2"></i>Delete Question?</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <p>Are you sure you want to remove this question?</p>
                <div class="p-3 bg-light rounded border-start border-4 border-danger mb-3">
                    <em id="modalQuestionText" class="text-dark"></em>
                </div>
                <p class="text-muted small mb-0">This will permanently delete the question and its choices.</p>
            </div>
            <div class="modal-footer bg-light border-0">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-controller="Questions" asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="modalQuestionId" />
                    <button type="submit" class="btn btn-danger px-4">Delete Now</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <script src="~/js/exam-details.js"></script>
}