@model IEnumerable<HEMS.Models.Exam>

@{
    ViewData["Title"] = "Exam Management";
    int rowCount = 1;
}
<link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />

<style>
    /* Decorative icon for Exam Center header - prettier */
    .app-icon {
        width: 72px;
        height: 72px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, var(--brand-primary-dark), var(--brand-primary));
        box-shadow: 0 10px 30px rgba(30,155,51,0.12);
        position: relative;
    }

    .app-icon::after {
        content: '';
        position: absolute;
        inset: 0;
        border-radius: 14px;
        box-shadow: inset 0 -8px 18px rgba(255,255,255,0.03);
    }

    .app-icon .icon-inner {
        width: 48px;
        height: 48px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255,255,255,0.12);
        backdrop-filter: blur(2px);
        z-index: 2;
    }

    .app-icon .bi { color: #fff; font-size: 1.4rem; }

    .app-icon-badge {
        position: absolute;
        right: -8px;
        top: -8px;
        background: #fff;
        color: var(--brand-primary);
        width: 24px;
        height: 24px;
        border-radius: 6px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 0.85rem;
        box-shadow: 0 6px 14px rgba(0,0,0,0.08);
        border: 2px solid rgba(255,255,255,0.12);
        z-index: 3;
    }
</style>

<div class="container-fluid py-4 px-3 px-lg-4">
    <div class="page-header mb-4 shadow-sm d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-3">
        <div class="d-flex align-items-center gap-3">
            <div class="app-icon">
                <div class="icon-inner">
                    <i class="bi bi-journal-bookmark-fill"></i>
                </div>
                <div class="app-icon-badge"><i class="bi bi-star-fill"></i></div>
            </div>
            <div>
                <h3 class="fw-bold mb-0">Exam Center</h3>
            </div>
        </div>
        <a asp-action="Create" class="btn btn-primary btn-popular px-4 py-2 shadow-sm">
            <i class="bi bi-plus-circle-fill"></i> New Exam
        </a>
    </div>

    @* SUCCESS ALERT FOR GENERATED CODE *@
    @if (TempData["SuccessCode"] != null)
    {
        <div class="alert alert-success border-0 shadow-sm rounded-4 mb-4 p-4 animate__animated animate__fadeInDown">
            <div class="d-flex align-items-center justify-content-between">
                <div class="d-flex align-items-center gap-3">
                    <div class="bg-success bg-opacity-10 p-2 rounded-circle">
                        <i class="bi bi-check-circle-fill text-success fs-4"></i>
                    </div>
                    <div>
                        <h6 class="fw-bold mb-1">Exam Published Successfully!</h6>
                        <p class="mb-0 small text-dark opacity-75">Students must use this code to unlock the assessment:</p>
                    </div>
                </div>
                <div class="text-end">
                    <div class="display-6 fw-bold font-monospace text-success tracking-widest">@TempData["SuccessCode"]</div>
                    <button class="btn btn-sm btn-outline-success border-0 mt-1" onclick="copyToClipboard('@TempData["SuccessCode"]')">
                        <i class="bi bi-clipboard me-1"></i> Copy Code
                    </button>
                </div>
            </div>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="text-center py-5 bg-white rounded-4 border">
            <i class="bi bi-cloud-plus display-4 text-muted"></i>
            <h5 class="mt-3 fw-bold">No Exams Created Yet</h5>
        </div>
    }
    else
    {
        <div class="card table-card shadow-sm desktop-table p-2">
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr class="small text-muted">
                        <th class="ps-3 text-center" style="width: 50px;">#</th>
                        <th>Exam Info</th>
                        <th>Academic Year</th>
                        <th>Duration</th>
                        <th>Status & Auth Code</th>
                        <th class="text-center action-col">Quick Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center text-muted small">@(rowCount++)</td>
                            <td>
                                <div class="fw-bold text-dark">@item.ExamTitle</div>
                                <div class="text-muted extra-small">ID #@item.ExamId • @(item.Questions?.Count ?? 0) Questions</div>
                            </td>
                            <td>
                                <span class="badge bg-light text-dark border py-2 px-3">
                                    <i class="bi bi-calendar3 me-2 text-primary"></i>@item.AcademicYear
                                </span>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-clock-fill me-2 text-muted"></i>
                                    <span>@item.DurationMinutes mins</span>
                                </div>
                            </td>
                            <td>
                                @if (item.ExamStatus == "Published")
                                {
                                    <div class="d-flex flex-column">
                                        <span class="badge bg-success bg-opacity-10 text-success px-3 py-1 border border-success border-opacity-25 align-self-start mb-1">Published</span>
                                        <span class="small font-monospace text-muted"><i class="bi bi-key-fill me-1"></i>CODE: <strong>@item.ExamCode</strong></span>
                                    </div>
                                }
                                else
                                {
                                    <span class="badge bg-warning bg-opacity-10 text-warning px-3 py-1 border border-warning border-opacity-25">Draft</span>
                                }
                            </td>
                            <td class="text-center action-col">
                                <div class="btn-group shadow-sm border rounded-3 overflow-hidden d-inline-flex flex-nowrap">
                                    <a asp-controller="Questions" asp-action="Create" asp-route-examId="@item.ExamId" class="btn btn-sm px-3 border-end bg-icon-add" title="Add Question">
                                        <i class="bi bi-patch-plus-fill"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.ExamId" class="btn btn-sm px-3 border-end bg-icon-view" title="Preview">
                                        <i class="bi bi-eye-fill"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.ExamId" class="btn btn-sm px-3 border-end bg-icon-edit" title="Edit">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a asp-action="Reports" asp-route-id="@item.ExamId" class="btn btn-sm px-3 border-end bg-icon-stats" title="Results">
                                        <i class="bi bi-bar-chart-fill"></i>
                                    </a>
                                    <form asp-action="Delete" asp-route-id="@item.ExamId" method="post" id="del_@item.ExamId" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="button" class="btn btn-sm px-3 bg-icon-delete"
                                                data-bs-toggle="modal" data-bs-target="#reusableConfirmModal"
                                                data-title="Delete Exam" data-target="del_@item.ExamId" data-type="form"
                                                data-message="Permanently delete '@item.ExamTitle'?">
                                            <i class="bi bi-trash3-fill"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @* Mobile View (Updated with Code) *@
        <div class="mobile-container">
            @{
                rowCount = 1;
            }
            @foreach (var item in Model)
            {
                <div class="mobile-card shadow-sm">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <span class="badge bg-primary bg-opacity-10 text-primary mb-2">Exam #@(rowCount++)</span>
                            <div class="fw-bold text-dark fs-5">@item.ExamTitle</div>
                        </div>
                    </div>

                    <div class="row g-3 border-bottom pb-3 mb-1">
                        <div class="col-6">
                            <div class="card-label small text-muted">Status</div>
                            <div>
                                @if (item.ExamStatus == "Published")
                                {
                                    <span class="badge bg-success-subtle text-success">Live</span>
                                    <div class="extra-small font-monospace mt-1">CODE: @item.ExamCode</div>
                                }
                                else
                                {
                                    <span class="badge bg-warning-subtle text-warning">Draft</span>
                                }
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="card-label small text-muted">Year</div>
                            <div class="fw-bold">@item.AcademicYear</div>
                        </div>
                    </div>

                    <div class="mobile-action-grid mt-3">
                        <a asp-controller="Questions" asp-action="Create" asp-route-examId="@item.ExamId" class="btn-mobile-action bg-icon-add">
                            <i class="bi bi-plus-square-fill"></i><span>Add Q</span>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.ExamId" class="btn-mobile-action bg-icon-view">
                            <i class="bi bi-eye-fill"></i><span>View</span>
                        </a>
                        <a asp-action="Edit" asp-route-id="@item.ExamId" class="btn-mobile-action bg-icon-edit">
                            <i class="bi bi-pencil-fill"></i><span>Edit</span>
                        </a>
                        <a asp-action="Reports" asp-route-id="@item.ExamId" class="btn-mobile-action bg-icon-stats">
                            <i class="bi bi-graph-up-arrow"></i><span>Stats</span>
                        </a>
                        <form asp-action="Delete" asp-route-id="@item.ExamId" method="post" id="del_mob_@item.ExamId" class="w-100" style="grid-column: span 2;">
                            @Html.AntiForgeryToken()
                            <button type="button" class="btn-mobile-action w-100 bg-icon-delete border-0"
                                    data-bs-toggle="modal" data-bs-target="#reusableConfirmModal"
                                    data-title="Delete Exam" data-target="del_mob_@item.ExamId" data-type="form"
                                    data-message="Delete '@item.ExamTitle'?">
                                <i class="bi bi-trash-fill"></i>
                                <span>Delete Exam</span>
                            </button>
                        </form>
                    </div>
                </div>
            }
        </div>
    }
</div>

<partial name="_ConfirmationModal" />

@section Scripts {
    <script src="~/js/ui-interactions.js" asp-append-version="true"></script>
    <script>
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(() => {
                alert("Authorization Code copied to clipboard!");
            });
        }
    </script>
}