@model IEnumerable<HEMS.Models.Exam>

@{
    ViewData["Title"] = "Exam Management";
}

<div class="container mt-1">
    <div class="d-flex justify-content-between align-items-center mb-4 bg-light p-3 rounded shadow-sm">
        <div>
            <h2 class="text-primary mb-0"><i class="bi bi-journal-check"></i> Exam Coordinator Dashboard</h2>
            <p class="text-muted mb-0">Manage your mock exams and view student performance.</p>
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th class="ps-4">Exam Title</th>
                        <th>Academic Year</th>
                        <th>Duration</th>
                        <th>Status</th>
                        <th>Questions</th>
                        <th>Mark Weight</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5 text-muted">
                                <h5>No exams created yet. Click "Create New Exam" to start.</h5>
                            </td>
                        </tr>
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4 align-middle">
                                <span class="fw-bold text-dark">@item.ExamTitle</span>
                            </td>
                            <td class="align-middle">
                                @* Assuming the property name in your model is AcademicYear *@
                                <span class="text-muted"><i class="bi bi-calendar3"></i> @item.AcademicYear</span>
                            </td>
                            <td class="align-middle">
                                <i class="bi bi-clock"></i> @item.DurationMinutes Mins
                            </td>
                            <td class="align-middle">
                                @if (item.ExamStatus == "Published")
                                {
                                    <span class="badge bg-success">Published</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Draft</span>
                                }
                            </td>
                            <td class="align-middle">
                                <span class="badge rounded-pill bg-secondary">
                                    @(item.Questions?.Count ?? 0) Qs
                                </span>
                            </td>
                            <td class="align-middle">
                                <span class="fw-bold text-primary">@item.DefaultMark.ToString("0.##")</span>
                                <small class="text-muted">/per Q</small>
                            </td>
                            <td class="text-center align-middle">
                                <div class="btn-group" role="group">
                                    <a asp-controller="Questions" asp-action="Create" asp-route-examId="@item.ExamId"
                                       class="btn btn-sm btn-outline-primary" title="Add Question">
                                        <i class="bi bi-plus-lg"></i>
                                    </a>

                                    <a asp-action="Details" asp-route-id="@item.ExamId"
                                       class="btn btn-sm btn-outline-secondary" title="View Details">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                    <a asp-action="Edit" asp-route-id="@item.ExamId"
                                       class="btn btn-sm btn-outline-warning" title="Edit Exam">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>

                                    <a asp-action="Reports" asp-route-id="@item.ExamId"
                                       class="btn btn-sm btn-outline-info" title="Reports">
                                        <i class="bi bi-graph-up"></i>
                                    </a>

                                    <form asp-action="Delete" asp-route-id="@item.ExamId" method="post"
                                          onsubmit="return confirm('Are you sure you want to delete this exam?');"
                                          style="display:inline;">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}