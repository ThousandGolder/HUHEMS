@model IEnumerable<HEMS.Controllers.ExamReportViewModel>

@{
    ViewData["Title"] = "Exam Report";

    // Statistics for the Specific Exam View
    var passCount = Model.Count(x => x.Status == "Passed");
    var taken = Model.Where(x => x.Status != "Not Taken").ToList();
    var avgScore = taken.Any() ? Math.Round(taken.Average(x => x.Percentage), 1) : 0;
}

@section Styles {
    <link rel="stylesheet" href="~/css/exam-details.css" asp-append-version="true" />
}

<div class="container mt-3">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold">@ViewBag.ExamTitle</h2>
        </div>
        <div class="btn-group">
            @if (ViewBag.IsGeneralReport != true)
            {
                <a asp-action="Reports" asp-route-id="" class="btn btn-outline-primary">
                    <i class="bi bi-graph-up"></i> General Report
                </a>
            }
            <button onclick="window.print()" class="btn btn-outline-dark">
                <i class="bi bi-printer"></i> Print
            </button>
        </div>
    </div>

    @if (ViewBag.IsGeneralReport == true)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow-sm border-0">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">
                            <i class="bi bi-bar-chart-fill me-2"></i>Overall Exam Performance
                        </h5>
                    </div>
                    <div class="card-body">
                        <canvas id="examChart" class="w-100" style="max-height:350px;"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th class="ps-4">Exam Title</th>
                            <th>Total Questions</th>
                            <th>Students Participated</th>
                            <th>Average Score</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 fw-bold">@item.ExamTitle</td>
                                <td>@item.TotalQuestions</td>
                                <td>@item.StudentCount</td>
                                <td>
                                    <span class="badge bg-primary">@item.AvgPercentage%</span>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Reports"
                                       asp-route-id="@item.ExamId"
                                       class="btn btn-sm btn-outline-primary">
                                        View Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        @if (Model.Any())
        {
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card border-0 shadow-sm bg-primary text-white">
                        <div class="card-body text-center">
                            <h6>Total Attempts</h6>
                            <h2 class="fw-bold mb-0">@Model.Count(x => x.Status != "Not Taken")</h2>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card border-0 shadow-sm bg-success text-white">
                        <div class="card-body text-center">
                            <h6>Average Percentage</h6>
                            <h2 class="fw-bold mb-0">@avgScore%</h2>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card border-0 shadow-sm bg-info text-white">
                        <div class="card-body text-center">
                            <h6>Pass Rate</h6>
                            <h2 class="fw-bold mb-0">@passCount / @Model.Count()</h2>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="card shadow-sm border-0">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">Student Name</th>
                                <th>Score</th>
                                <th>Percentage</th>
                                <th>Date Taken</th>
                                <th class="text-center">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold">@item.StudentName</td>
                                    <td>
                                        <span class="text-primary fw-bold">@item.Score</span>
                                        <span class="text-muted">/ @item.TotalQuestions</span>
                                    </td>
                                    <td>
                                        <div class="progress" style="height:8px;width:100px;">
                                            <div class="progress-bar
                                                @(item.Status == "Passed" ? "bg-success" :
                                                  item.Status == "Failed" ? "bg-danger" : "bg-secondary")"
                                                 style="width:@item.Percentage%">
                                            </div>
                                        </div>
                                        <small class="text-muted">@item.Percentage%</small>
                                    </td>
                                    <td>
                                        @(item.DateTaken == DateTime.MinValue
                                            ? "-"
                                            : item.DateTaken.ToString("MMM dd, yyyy"))
                                    </td>
                                    <td class="text-center">
                                        <span class="badge rounded-pill px-3
                                            @(item.Status == "Passed"
                                                ? "bg-success-subtle text-success border border-success"
                                                : item.Status == "Failed"
                                                ? "bg-danger-subtle text-danger border border-danger"
                                                : "bg-secondary-subtle text-secondary border border-secondary")">
                                            @item.Status
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (!Model.Any())
                {
                    <div class="text-center py-5">
                        <i class="bi bi-clipboard-x text-muted fs-1"></i>
                        <p class="text-muted mt-2">
                            No students have attempted this exam yet.
                        </p>
                    </div>
                }
            </div>
        </div>
    }
</div>

@section Scripts {
    @if (ViewBag.IsGeneralReport == true)
    {
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script src="~/js/exam-reports.js" asp-append-version="true"></script>
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const labels = @Html.Raw(Json.Serialize(Model.Select(m => m.ExamTitle)));
                const scores = @Html.Raw(Json.Serialize(Model.Select(m => m.AvgPercentage)));
                initGeneralReportChart(labels, scores);
            });
        </script>
    }
}
