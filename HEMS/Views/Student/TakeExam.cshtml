@model HEMS.Models.Question
@{
    string examTitle = Model?.Exam?.ExamTitle ?? "Assessment";
    // Using default mark if null
    decimal questionMark = Model?.Exam?.DefaultMark ?? 1.0m;
    int currentIndex = ViewBag.Index ?? 0;
    int total = ViewBag.Total ?? 1;
    // Fix: Fallback for duration to prevent JS errors
    int durationMinutes = ViewBag.durationMinutes ?? 30;

    var answeredIndices = ViewBag.AnsweredIndices as List<int> ?? new List<int>();
    var flaggedIndices = ViewBag.FlaggedIndices as List<int> ?? new List<int>();
    int? selectedChoiceId = ViewBag.SelectedChoiceId;
    bool isCurrentlyFlagged = flaggedIndices.Contains(currentIndex);
}

@section Styles {
    <link rel="stylesheet" href="~/css/exam-style.css" asp-append-version="true" />
}

<div class="container-fluid py-4 exam-secure-zone">
    <div class="row g-4">
        <div class="col-md-9">
            <div class="exam-header-bar d-flex justify-content-between align-items-center mb-4 shadow-sm px-4 py-3 bg-white rounded-3">
                <div class="d-flex align-items-center">
                    <div class="exam-badge me-3"><i class="bi bi-pencil-square text-primary"></i></div>
                    <h5 class="mb-0 fw-bold text-dark">@examTitle</h5>
                </div>

                <div class="timer-display d-flex align-items-center px-3 py-2 bg-light rounded-pill border" id="timerContainer">
                    <i class="bi bi-clock-fill me-2 pulse-timer text-primary"></i>
                    <span id="timer" class="font-monospace fw-bold me-3">--:--:--</span>
                    <button type="button" id="toggleTimerVisibility" class="btn btn-sm p-0 border-0 text-muted">
                        <i class="bi bi-eye-fill" id="eyeIcon"></i>
                    </button>
                </div> 
            </div>

            <div class="card shadow-sm border-0 mb-4 overflow-hidden main-exam-card">
                <div class="card-body p-0">
                    <div class="row g-0">
                        <div class="col-md-2 bg-light border-end p-4 text-center d-flex flex-column justify-content-between">
                            <div>
                                <h6 class="text-uppercase text-muted small">Question</h6>
                                <h1 class="display-6 fw-bold text-primary mb-0">@(currentIndex + 1)</h1>
                                <hr class="my-3" />
                                <div id="statusContainer" class="mb-3">
                                    <p class="small fw-bold mb-1 @(selectedChoiceId.HasValue ? "text-success" : "text-muted")" id="answerStatus">
                                        <i class="bi @(selectedChoiceId.HasValue ? "bi-check-circle-fill" : "bi-circle") me-1"></i>
                                        @(selectedChoiceId.HasValue ? "Answered" : "Not yet answered")
                                    </p>
                                    <p class="small text-secondary">Mark: @questionMark.ToString("F2")</p>
                                </div>
                            </div>
                            <button type="button" id="flagToggle" class="btn @(isCurrentlyFlagged ? "btn-danger" : "btn-outline-secondary") btn-sm w-100 py-2">
                                <i class="bi @(isCurrentlyFlagged ? "bi-flag-fill" : "bi-flag") me-1"></i>
                                <span>@(isCurrentlyFlagged ? "Remove Flag" : "Flag Q")</span>
                            </button>
                        </div>

                        <div class="col-md-10 p-4 p-lg-5">
                            <div class="question-container mb-4">
                                <p class="question-text fs-5 text-dark">@Model?.QuestionText</p>
                                @if (!string.IsNullOrEmpty(Model?.ImagePath))
                                {
                                    <div class="question-image my-3 text-center">
                                        <img src="@Model.ImagePath" class="img-fluid rounded border shadow-sm" style="max-height:400px;" />
                                    </div>
                                }
                            </div>

                            <form asp-controller="Student" asp-action="SubmitAnswer" method="post" id="examForm">
                                <input type="hidden" name="qId" value="@(Model?.QuestionId ?? 0)" />
                                <input type="hidden" name="examId" id="examIdField" value="@(Model?.ExamId ?? 0)" />
                                <input type="hidden" name="nextIdx" value="@(currentIndex + 1)" />
                                <input type="hidden" name="flagged" id="flaggedInput" value="@isCurrentlyFlagged.ToString().ToLower()" />

                                <div class="choices-stack">
                                    @if (Model?.Choices != null)
                                    {
                                        var choicesList = Model.Choices.ToList();
                                        for (int i = 0; i < choicesList.Count; i++)
                                        {
                                            char choiceLetter = (char)('A' + i);
                                            var choice = choicesList[i];
                                            <div class="choice-wrapper mb-2">
                                                <input class="btn-check option-input" type="radio" name="choiceId"
                                                       value="@choice.ChoiceId" id="choice_@choice.ChoiceId" required
                                                       @(selectedChoiceId == choice.ChoiceId ? "checked" : "")>
                                                <label class="choice-card d-flex align-items-center w-100 p-3 rounded-3 border" for="choice_@choice.ChoiceId">
                                                    <span class="choice-alpha me-3">@choiceLetter</span>
                                                    <span class="choice-text">@choice.ChoiceText</span>
                                                </label>
                                            </div>
                                        }
                                    }
                                </div>
                                <div class="mt-4">
                                    <button type="button" onclick="clearChoice()" class="btn btn-link text-muted text-decoration-none small p-0">
                                        <i class="bi bi-eraser-fill"></i> Clear my choice
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-white d-flex justify-content-between align-items-center p-4 border-top">
                    @if (currentIndex > 0)
                    {
                        <a asp-action="TakeExam" asp-route-examId="@Model?.ExamId" asp-route-index="@(currentIndex - 1)" class="btn btn-outline-primary px-4 rounded-pill">
                            <i class="bi bi-arrow-left me-2"></i>Previous
                        </a>
                    }
                    else
                    {

                        <span></span>
                    }

                    @if (currentIndex == total - 1)
                    {
                        <button type="button" class="btn btn-success px-5 py-2 rounded-pill fw-bold" data-bs-toggle="modal" data-bs-target="#reusableConfirmModal" data-title="Finish Attempt?" data-message="Submit final answers?" data-target="examForm" data-type="form">
                            Finish Attempt <i class="bi bi-check2-all ms-2"></i>
                        </button>
                    }
                    else
                    {
                        <button type="button" onclick="submitExamForm()" class="btn btn-primary px-5 py-2 rounded-pill fw-bold">
                            Next Question <i class="bi bi-arrow-right ms-2"></i>
                        </button>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="sticky-nav">
                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-header bg-dark text-white fw-bold py-3">
                        <i class="bi bi-grid-3x3-gap me-2"></i> Navigation
                    </div>
                    <div class="card-body">
                        <div class="question-grid">
                            @for (int i = 0; i < total; i++)
                            {
                                <a asp-action="TakeExam" asp-route-examId="@Model?.ExamId" asp-route-index="@i" id="nav-box-@i"
                                   class="grid-box @(i == currentIndex ? "active" : "") @(answeredIndices.Contains(i) ? "answered" : "") @(flaggedIndices.Contains(i) ? "flagged" : "")">
                                    @(i + 1)
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_ConfirmationModal" />

@section Scripts {
  <script src="~/js/ui-interactions.js" asp-append-version="true"></script>
  <script src="~/js/exam-core.js" asp-append-version="true"></script>
    <script>
        $(function() {
            // Fix: Safe numeric conversion for JS
            const examId = parseInt($("#examIdField").val()) || 0;
            const currentIndex = @currentIndex;
            const durationMinutes = @durationMinutes;

            // Flag Toggle Logic
            $("#flagToggle").on("click", function() {
                const hiddenInput = $("#flaggedInput");
                const navBox = $(`#nav-box-${currentIndex}`);
                let isFlagged = hiddenInput.val() === "true";
                isFlagged = !isFlagged;
                hiddenInput.val(isFlagged);

                $(this).toggleClass("btn-outline-secondary btn-danger");
                $(this).find("i").toggleClass("bi-flag bi-flag-fill");
                $(this).find("span").text(isFlagged ? "Remove Flag" : "Flag Q");
                navBox.toggleClass("flagged", isFlagged);
            });

            // Timer Logic
            const storageKey = `exam_end_time_${examId}`;
            let endTime = localStorage.getItem(storageKey);

            if (!endTime) {
                endTime = new Date().getTime() + (durationMinutes * 60 * 1000);
                localStorage.setItem(storageKey, endTime);
                // Clear any previous notification markers for this exam (different attempts may have left keys)
                Object.keys(localStorage).forEach(function (k) {
                    if (k.startsWith(`exam_notify_15_${examId}_`) || k.startsWith(`exam_notify_5_${examId}_`)) {
                        localStorage.removeItem(k);
                    }
                });
            }
            // Ensure endTime is numeric
            endTime = parseInt(endTime, 10);

            function updateTimer() {
                const now = new Date().getTime();
                const distance = endTime - now;

                if (distance < 0) {
                    clearInterval(timerInterval);
                    localStorage.removeItem(storageKey);
                    $("#timer").text("EXPIRED");
                    $("#examForm").submit();
                    return;
                }

                const h = Math.floor(distance / 3600000).toString().padStart(2, '0');
                const m = Math.floor((distance % 3600000) / 60000).toString().padStart(2, '0');
                const s = Math.floor((distance % 60000) / 1000).toString().padStart(2, '0');

                $("#timer").text(`${h}:${m}:${s}`);
                if (distance < 60000) $("#timer").addClass("text-danger");
            }

            // Notification thresholds (minutes)
            // Keys are namespaced by examId and endTime so notifications don't leak across attempts
            // (notify keys are created after endTime is known below)

            // Timer visibility toggle - remember preference per exam
            const visKey = `exam_timer_visible_${examId}`;
            let timerVisible = localStorage.getItem(visKey);
            timerVisible = (timerVisible === null) ? true : (timerVisible === '1');

            function applyTimerVisibility() {
                if (timerVisible) {
                    $('.pulse-timer').show();
                    $('#timer').show();
                    $('#eyeIcon').removeClass('bi-eye-slash').addClass('bi-eye-fill');
                } else {
                    $('.pulse-timer').hide();
                    $('#timer').hide();
                    $('#eyeIcon').removeClass('bi-eye-fill').addClass('bi-eye-slash');
                }
            }

            // Wire up toggle button
            $('#toggleTimerVisibility').on('click', function () {
                timerVisible = !timerVisible;
                localStorage.setItem(visKey, timerVisible ? '1' : '0');
                applyTimerVisibility();
            });

            // call once to set initial visibility state
            applyTimerVisibility();

            // Now that endTime is known, create per-attempt notification keys
            const notifyKey15 = `exam_notify_15_${examId}_${endTime}`;
            const notifyKey5 = `exam_notify_5_${examId}_${endTime}`;
            let notified15 = localStorage.getItem(notifyKey15) === '1';
            let notified5 = localStorage.getItem(notifyKey5) === '1';

            // If the stored notified flags exist but the remaining time is greater than the threshold,
            // clear them so the user will be notified at the correct thresholds for this attempt.
            (function normalizeNotifyFlags() {
                const now = new Date().getTime();
                const distance = endTime - now;
                const minutesLeftNow = Math.floor(distance / 60000);
                if (notified15 && minutesLeftNow > 15) {
                    notified15 = false;
                    localStorage.removeItem(notifyKey15);
                }
                if (notified5 && minutesLeftNow > 5) {
                    notified5 = false;
                    localStorage.removeItem(notifyKey5);
                }
            })();

            // Enhanced update to check notification thresholds
            function updateTimerWithNotices() {
                const now = new Date().getTime();
                const distance = endTime - now;
                if (distance <= 0) return; // handled elsewhere

                const minutesLeft = Math.floor(distance / 60000);

                // Notify at or below 15 minutes
                if (!notified15 && minutesLeft <= 15) {
                    notified15 = true;
                    localStorage.setItem(notifyKey15, '1');
                    try {
                        updateModalContent('15 minutes remaining', 'You have 15 minutes left to complete the exam. Please manage your time accordingly.', null, 'warning');
                        const modalEl = document.getElementById('reusableConfirmModal');
                        const modal = new bootstrap.Modal(modalEl);
                        modal.show();
                    } catch (e) { console.warn(e); }
                }

                // Notify at or below 5 minutes — show a brief, non-blocking alert
                if (!notified5 && minutesLeft <= 5) {
                    notified5 = true;
                    localStorage.setItem(notifyKey5, '1');
                    try {
                        updateModalContent('5 minutes remaining', 'Only 5 minutes left. Please finish and submit your answers now.', null, 'danger');
                        const modalEl = document.getElementById('reusableConfirmModal');
                        // create modal instance and show it, then auto-hide after a short duration so it doesn't fully block the browser
                        const modal = new bootstrap.Modal(modalEl, { backdrop: true, keyboard: true });
                        modal.show();
                        // Auto-dismiss after 6 seconds to avoid locking the UI
                        setTimeout(() => {
                            try { modal.hide(); } catch (e) { /* ignore */ }
                        }, 6000);
                    } catch (e) { console.warn(e); }
                }
            }

            const timerInterval = setInterval(function() { updateTimer(); updateTimerWithNotices(); }, 1000);
            // run both once immediately
            updateTimer(); updateTimerWithNotices();

            // Answer status update
            $('.option-input').on('change', function() {
                $('#answerStatus').removeClass('text-muted').addClass('text-success')
                    .html('<i class="bi bi-check-circle-fill me-1"></i> Answered');
                $(`#nav-box-${currentIndex}`).addClass('answered');
            });
        });

        function clearChoice() {
            $('.option-input').prop('checked', false);
            $('#answerStatus').removeClass('text-success').addClass('text-muted').html('<i class="bi bi-circle me-1"></i> Not yet answered');
            $(`#nav-box-@currentIndex`).removeClass('answered');
        }

        function submitExamForm() { $("#examForm").submit(); }
    </script>
}