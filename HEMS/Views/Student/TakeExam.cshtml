@model HEMS.Models.Question
@{
    string examTitle = Model?.Exam?.ExamTitle ?? "Assessment";
    decimal questionMark = Model?.Exam?.DefaultMark ?? 1.0m;
    int currentIndex = ViewBag.Index;
    int total = ViewBag.Total;
    int durationMinutes = Model?.Exam?.DurationMinutes > 0 ? Model.Exam.DurationMinutes : 30;

    var answeredIndices = ViewBag.AnsweredIndices as List<int> ?? new List<int>();
    var flaggedIndices = ViewBag.FlaggedIndices as List<int> ?? new List<int>();
    int? selectedChoiceId = ViewBag.SelectedChoiceId;
    bool isCurrentlyFlagged = flaggedIndices.Contains(currentIndex);
}

@section Styles {
    <link rel="stylesheet" href="~/css/exam-style.css" asp-append-version="true" />
    <style>
        .exam-secure-zone {
            user-select: none;
            -webkit-user-select: none;
        }

        .cursor-pointer {
            cursor: pointer;
        }
    </style>
}

<div class="container-fluid py-4 exam-secure-zone">
    <div class="row g-4">
        <div class="col-md-9">
            <div class="exam-header-bar d-flex justify-content-between align-items-center mb-4 shadow-sm px-4 py-3 bg-white rounded-3">
                <div class="d-flex align-items-center">
                    <div class="exam-badge me-3"><i class="bi bi-pencil-square text-primary"></i></div>
                    <h5 class="mb-0 fw-bold text-dark">@examTitle</h5>
                </div>
                <div class="timer-display d-flex align-items-center px-3 py-2 bg-light rounded-pill border" id="timerContainer">
                    <i class="bi bi-clock-fill me-2 pulse-timer text-primary"></i>
                    <span id="timer" class="font-monospace fw-bold">--:--:--</span>
                </div>
            </div>

            <div class="card shadow-sm border-0 mb-4 overflow-hidden main-exam-card">
                <div class="card-body p-0">
                    <div class="row g-0">
                        <div class="col-md-2 bg-light border-end p-4 text-center d-flex flex-column justify-content-between">
                            <div>
                                <h6 class="text-uppercase text-muted small">Question</h6>
                                <h1 class="display-6 fw-bold text-primary mb-0">@(currentIndex + 1)</h1>
                                <hr class="my-3" />
                                <div id="statusContainer" class="mb-3">
                                    <p class="small fw-bold mb-1 @(selectedChoiceId.HasValue ? "text-success" : "text-muted")" id="answerStatus">
                                        <i class="bi @(selectedChoiceId.HasValue ? "bi-check-circle-fill" : "bi-circle") me-1"></i>
                                        @(selectedChoiceId.HasValue ? "Answered" : "Not yet answered")
                                    </p>
                                    <p class="small text-secondary">Mark: @questionMark.ToString("F2")</p>
                                </div>
                            </div>
                            <button type="button" id="flagToggle" class="btn @(isCurrentlyFlagged ? "btn-danger" : "btn-outline-secondary") btn-sm w-100 py-2 shadow-sm">
                                <i class="bi @(isCurrentlyFlagged ? "bi-flag-fill" : "bi-flag") me-1"></i>
                                <span>@(isCurrentlyFlagged ? "Remove Flag" : "Flag Q")</span>
                            </button>
                        </div>

                        <div class="col-md-10 p-4 p-lg-5">
                            <div class="question-container mb-4">
                                <p class="question-text fs-5 text-dark leading-relaxed">@Model?.QuestionText</p>

                                @* ADDED: Image Rendering for Students *@
                                @if (!string.IsNullOrEmpty(Model?.ImagePath))
                                {
                                    <div class="question-image my-3 text-center">
                                        <img src="@Model.ImagePath" class="img-fluid rounded border shadow-sm" style="max-height:400px;" />
                                    </div>
                                }
                            </div>

                            <form asp-controller="Student" asp-action="SubmitAnswer" method="post" id="examForm">
                                <input type="hidden" name="qId" value="@(Model?.QuestionId ?? 0)" />
                                <input type="hidden" name="examId" id="examIdField" value="@(Model?.ExamId ?? 0)" />
                                <input type="hidden" name="nextIdx" value="@(currentIndex + 1)" />
                                <input type="hidden" name="flagged" id="flaggedInput" value="@isCurrentlyFlagged.ToString().ToLower()" />

                                <div class="choices-stack">
                                    @if (Model?.Choices != null)
                                    {
                                        var choicesList = Model.Choices.ToList();
                                        for (int i = 0; i < choicesList.Count; i++)
                                        {
                                            char choiceLetter = (char)('A' + i);
                                            var choice = choicesList[i];
                                            <div class="choice-wrapper mb-2">
                                                <input class="btn-check option-input" type="radio" name="choiceId"
                                                       value="@choice.ChoiceId" id="choice_@choice.ChoiceId" required
                                                       @(selectedChoiceId == choice.ChoiceId ? "checked" : "")>
                                                <label class="choice-card d-flex align-items-center w-100 p-3 rounded-3 border cursor-pointer" for="choice_@choice.ChoiceId">
                                                    <span class="choice-alpha me-3">@choiceLetter</span>
                                                    <span class="choice-text">@choice.ChoiceText</span>
                                                </label>
                                            </div>
                                        }
                                    }
                                </div>
                                <div class="mt-4">
                                    <button type="button" onclick="clearChoice()" class="btn btn-link text-muted text-decoration-none small p-0">
                                        <i class="bi bi-eraser-fill"></i> Clear my choice
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="card-footer bg-white d-flex justify-content-between align-items-center p-4 border-top">
                    @if (currentIndex > 0)
                    {
                        <a asp-action="TakeExam" asp-route-examId="@Model?.ExamId" asp-route-index="@(currentIndex - 1)" class="btn btn-light border px-4 rounded-pill">
                            <i class="bi bi-arrow-left me-2"></i>Previous
                        </a>
                    }
                    else
                    {

                        <span></span>
                    }

                    @if (currentIndex == total - 1)
                    {
                        <button type="button" class="btn btn-success px-5 py-2 rounded-pill fw-bold shadow-sm" data-bs-toggle="modal" data-bs-target="#reusableConfirmModal" data-title="Finish Attempt?" data-message="Are you sure you want to submit your final answers?" data-target="examForm" data-type="form">
                            Finish Attempt <i class="bi bi-check2-all ms-2"></i>
                        </button>
                    }
                    else
                    {
                        <button type="button" onclick="submitExamForm()" class="btn btn-primary px-5 py-2 rounded-pill fw-bold shadow-sm">
                            Next Question <i class="bi bi-arrow-right ms-2"></i>
                        </button>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="sticky-nav">
                <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
                    <div class="card-header bg-dark text-white fw-bold py-3">
                        <i class="bi bi-grid-3x3-gap me-2"></i> Questions Navigation
                    </div>
                    <div class="card-body">
                        <div class="question-grid">
                            @for (int i = 0; i < total; i++)
                            {
                                <a asp-action="TakeExam" asp-route-examId="@Model?.ExamId" asp-route-index="@i" id="nav-box-@i" class="grid-box @(i == currentIndex ? "active" : "") @(answeredIndices.Contains(i) ? "answered" : "") @(flaggedIndices.Contains(i) ? "flagged" : "")">
                                    @(i + 1)
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_ConfirmationModal" />

@section Scripts {
    <script src="~/js/ui-interactions.js" asp-append-version="true"></script>
    <script src="~/js/exam-core.js" asp-append-version="true"></script>
    <script>
        $(function() {
            const examId = parseInt($("#examIdField").val()) || 0;
            const currentIndex = @currentIndex;
            const durationMinutes = @durationMinutes;
            handleResumeLogic(examId, currentIndex);
            const storageKey = `exam_end_time_${examId}`;
            let endTime = localStorage.getItem(storageKey);
            if (!endTime) {
                endTime = new Date().getTime() + (durationMinutes * 60 * 1000);
                localStorage.setItem(storageKey, endTime);
            }
            function updateTimer() {
                const now = new Date().getTime();
                const distance = endTime - now;
                if (distance < 0) {
                    clearInterval(timerInterval);
                    localStorage.removeItem(storageKey);
                    document.getElementById("timer").innerHTML = "EXPIRED";
                    document.getElementById("examForm").submit();
                    return;
                }
                const h = Math.floor(distance / 3600000).toString().padStart(2, '0');
                const m = Math.floor((distance % 3600000) / 60000).toString().padStart(2, '0');
                const s = Math.floor((distance % 60000) / 1000).toString().padStart(2, '0');
                document.getElementById("timer").innerHTML = `${h}:${m}:${s}`;
            }
            const timerInterval = setInterval(updateTimer, 1000);
            updateTimer();
            initTabDetection();
            initSecurity(examId);
            initQuestionInteractions(currentIndex, examId, @(Model?.QuestionId ?? 0));
        });
        function clearChoice() {
            $('.option-input').prop('checked', false);
            $('#answerStatus').removeClass('text-success').addClass('text-muted').html('<i class="bi bi-circle me-1"></i> Not yet answered');
            $('#nav-box-@currentIndex').removeClass('answered');
        }
        function submitExamForm() { document.getElementById("examForm").submit(); }
    </script>
}